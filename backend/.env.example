# Copy this file to backend/.env and fill in the values you need.
# The backend loads env files in this order (first value wins):
#   1) repo-root .env
#   2) backend/.env
#   3) frontend/.env.local

# Core runtime
ALLOW_ANON=true
ALLOWED_ORIGINS=http://localhost:3000
CAREPILOT_DB_PATH=backend/carepilot.sqlite

# Chat routing
# auto | anthropic | dedalus | openrouter | openai
CAREPILOT_CHAT_PROVIDER=auto
CAREPILOT_CHAT_TIMEOUT_SECONDS=25
CAREPILOT_CHAT_MODEL=gpt-4o-mini

# Anthropic provider
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-latest
ANTHROPIC_API_BASE_URL=https://api.anthropic.com/v1
ANTHROPIC_API_VERSION=2023-06-01

# Dedalus provider
DEDALUS_API_KEY=
DEDALUS_MODEL=anthropic/claude-opus-4-5
DEDALUS_BASE_URL=https://api.dedaluslabs.ai/v1
# Optional legacy alias (supported by code):
DEDALUS_API_BASE_URL=https://api.dedaluslabs.ai/v1

# OpenRouter provider
OPENROUTER_API_KEY=
OPENROUTER_MODEL=openai/gpt-4o-mini
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_SITE_URL=https://your-site.example
OPENROUTER_APP_NAME=MedClaw

# OpenAI provider and shared document/audio calls
OPENAI_API_KEY=
OPENAI_API_BASE_URL=https://api.openai.com/v1

# Request limits and model overrides
CAREPILOT_MAX_AUDIO_BYTES=20971520
CAREPILOT_MAX_DOCUMENT_BYTES=26214400
CAREPILOT_WHISPER_MODEL=whisper-1
CAREPILOT_DOCUMENT_MODEL=gpt-4o-mini

# Lab discovery
# true = disable external web lookups and use fallback results
CAREPILOT_DISABLE_EXTERNAL_WEB=true
CAREPILOT_WEB_TIMEOUT_SECONDS=5.0
BRAVE_API_KEY=
